#!/bin/bash

# if OS is Ubuntu
# sudo apt-get install vim-gnome ctags cscope git
# elsif
# sudo yum install gvim


echo "It will remove your pre-config, continue or not(y/n)?"
read tmp
if test $tmp = "y"
then
    {
        rm -r $HOME/.vim
        rm $HOME/.vimrc
        echo "Building \".vim\" ..."
        ln -s $(pwd)/.vim/ $HOME/.vim
        echo "Building \".vimrc\"..."
        ln -s $(pwd)/.vimrc $HOME/.vimrc
        echo "Now install vundle"
        git clone https://github.com/gmarik/vundle.git ~/.vim/bundle/vundle
        echo "Install fonts?"
        read tmp
        if test $tmp = "y"
        then
            {
                bash install_fonts
            }
        fi
        echo "Install finished."
    }
else
    echo "Nothing I can do."
fi
